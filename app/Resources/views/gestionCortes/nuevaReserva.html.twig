{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block title %}
Nueva reserva
{% endblock %}
{% block body %}
<!-- page content -->
<div class= "container">
<h1 class "mt-4 mb-3">Nueva reserva</h1>
    <div class= "row">
        <div class="col-md-8">
        {{ form_start(form) }}
        {{ form_row(form.fecha) }}
        {{ form_row(form.horario) }}
        {{ form_row(form.comensales,{
                        'label': 'Personas para la reserva'}) }}
        {{ form_row(form.observaciones,{
                        'label': 'Observaciones'}) }}                
         {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}



